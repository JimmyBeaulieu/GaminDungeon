<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="#242424"
    android:screenOrientation="landscape">

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title" />


    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textColor="#15181f"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        />

    <Button
        android:id="@+id/btnOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Options"
        android:textColor="#15181f"
        android:layout_marginStart="64dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/btnPlay" />

    <Button
        android:id="@+id/btnTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Tutorial"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="@id/btnPlay"
        android:layout_marginBottom="64dp"
        android:textColor="#15181f"/>

    <Button
        android:id="@+id/deleteSaveFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="delete save file"
        android:textColor="#15181f"
        app:layout_constraintTop_toBottomOf="@id/btnTutorial"
        app:layout_constraintStart_toStartOf="@id/btnTutorial"

        />

    <Button
        android:id="@+id/musicToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/deleteSaveFileButton"
        app:layout_constraintStart_toStartOf="@id/deleteSaveFileButton"
        />

    <Button
        android:id="@+id/sfxToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/musicToggle"
        app:layout_constraintStart_toStartOf="@id/deleteSaveFileButton"/>

    <Button
        android:id="@+id/btnReturnToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Save Options"
        android:textColor="#15181f"
        app:layout_constraintTop_toBottomOf="@id/sfxToggle"
        app:layout_constraintStart_toStartOf="@id/sfxToggle"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>